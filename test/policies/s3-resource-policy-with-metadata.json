{
  "Version": "2012-10-17",
  "Id": "S3BucketResourcePolicy",
  "Description": "Resource policy with metadata fields",
  "Environment": "production",
  "Team": "platform",
  "Statement": [
    {
      "Sid": "AllowCrossAccountRead",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::111111111111:user/alice"
      },
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::shared-bucket",
        "arn:aws:s3:::shared-bucket/*"
      ],
      "ApprovedBy": "security-team",
      "TicketRef": "JIRA-12345"
    }
  ]
}
